extends layout

block content
  .w3-card-4 
    header.w3-container.w3-blue 
      h1 Planta 
    
    .w3-container 
        ul 
          li #[b Identificador]: #{planta._id}
          li #[b Rua]: #{planta.Rua}
          li #[b Local]: #{planta.Local}
          li #[b Freguesia]: #{planta.Freguesia}
          li #[b Espécie]: #{planta.Espécie}
          li #[b Origem]: #{planta.Origem}
          li #[b Estado]: #{planta.Estado}
          li #[b Caldeira]: #{planta.Caldeira}
          li #[b Tutor]: #{planta.Tutor}
          li #[b Implantação]: #{planta.Implantação}
          li #[b Gestor]: #{planta.Gestor}
          li #[b Número de Registo]: #{planta.NúmerodeRegisto}
          li #[b Código de Rua]: #{planta.Códigoderua}
          li #[b Nome Científico]: #{planta.NomeCientífico}
          li #[b Data de Plantação]: #{planta.DatadePlantação}
          li #[b Data de Actualização]: #{planta.Datadeactualização}
          li #[b Número de Intervenções]: #{planta.Númerodeintervenções}

        button.w3-btn.w3-round.w3-blue.w3-margin
            a(href="/") Voltar para a página principal

    footer.w3-container.w3-blue 
      h5 Generated by Planta::EngWeb2023 in #{d}