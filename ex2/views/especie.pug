extends layout

block content
  .w3-card-4 
    header.w3-container.w3-blue 
      h1 Planta 
    
    .w3-container 
        ul 
          li #[b Nome]: #{plantas[0].Espécie}
          li #[b Designação Científica]: #{plantas[0].NomeCientífico}

        table.w3-table-all 
            tr 
              th Identificador
              th Freguesia
              th Espécie
              th Estado 
              th Número de Intervenções
            each p in plantas
              tr
                td
                  a(href="/" + p._id) #{p._id}
                td= p.Freguesia
                td
                  a(href="/especies/" + p.Espécie) #{p.Espécie}
                td= p.Estado
                td= p.Númerodeintervenções

        button.w3-btn.w3-round.w3-blue.w3-margin
            a(href="/") Voltar para a página principal

    footer.w3-container.w3-blue 
      h5 Generated by Planta::EngWeb2023 in #{d}